                    script += '<li><div><span data-bind="text: _id() "></span> </div></li>';
                    script +=    '</ul>';
                }
                return script;
            };


            subevents = ko.observableArray();

            getSubevent = function (parentID) {
                var indexParent = subevents().map(function (e) { return e._id(); }).indexOf(parentID)
